@{
}
@model IEnumerable<University>
    
    <h1>Universidades</h1>
    <p>En esta pagina se mostrara todas las uninversidades disponibles a consultar. Por favor, ¡selecciona la de tu interes!</p>
    <ul style="list-style: none; padding: 0;">
        @foreach (var university in Model)
        {
            <li style="background-color: #f0f0f0; border: 1px solid #ddd; border-radius: 5px; margin-bottom: 20px;">
                <a href="@Url.Action("Faculty", "Home", new { universityId = university.Id })" style="display: grid; grid-template-columns: auto 1fr; gap: 10px; text-decoration: none; padding: 10px;">
                    <img src="@university.LogoUrl" alt="@university.Name" style="max-width: 100px; height: auto; border-radius: 5px;" />
                    <div>
                        <label style="margin: 0 0 5px 0; font-weight: bold;">@university.Name</label>
                        <p style="margin: 0;">@university.Description</p>
                    </div>
                </a>
            </li>
        }
    </ul>
      


